@model ComplaintManagement.Models.Customers

@{
    ViewData["Title"] = "Create";
}

<div class="main-body">
    <div class="page-wrapper">
        <!-- Page-body start -->
        <div class="page-body">
            <!-- Basic table card start -->
            <div class="card">
                <div class="card-header">

                    <div class="form-group row">
                        <h3 class="col-sm-10">Add New Customer</h3>
                        <a class="col-sm-2" asp-action="Index">Back to List</a>
                    </div>
                </div>
                <div class="card-block">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label_custom col-form-label">Name </label>
                            <div style="padding:0 0 0 0" class="autocomplete col-sm-3">
                                <input asp-for="CustomerName" id="name" class="form-control" />
                                <span asp-validation-for="CustomerName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label_custom col-form-label">City</label>
                            <div style="padding:0 0 0 0" class="autocomplete col-sm-3">
                                <input asp-for="City" class="form-control" />
                            </div>
                            <label class="col-sm-2 col-form-label_custom col-form-label offset-1">Address </label>
                            <div style="padding:0 0 0 0" class="autocomplete col-sm-3">
                                <input asp-for="Address" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label_custom col-form-label">Website</label>
                            <div style="padding:0 0 0 0" class="autocomplete col-sm-3">
                                <input asp-for="Website" class="form-control" />
                            </div>
                            <label class="col-sm-2 col-form-label_custom col-form-label offset-1">Phone # </label>
                            <div style="padding:0 0 0 0" class="autocomplete col-sm-3">
                                <input asp-for="Phone" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label_custom col-form-label">Mobile</label>
                            <div style="padding:0 0 0 0" class="autocomplete col-sm-3">
                                <input asp-for="Mobile" class="form-control" />
                            </div>
                            <label class="col-sm-2 col-form-label_custom col-form-label offset-1">Mobile # 2 </label>
                            <div style="padding:0 0 0 0" class="autocomplete col-sm-3">
                                <input asp-for="Mobile" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label_custom col-form-label">Email</label>
                            <div style="padding:0 0 0 0" class="autocomplete col-sm-3">
                                <input asp-for="Email" class="form-control" />
                            </div>
                            <label class="col-sm-2 col-form-label_custom col-form-label offset-1">Email # 2 </label>
                            <div style="padding:0 0 0 0" class="autocomplete col-sm-3">
                                <input asp-for="Email" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label_custom col-form-label">Mobile #</label>
                            <div style="padding:0 0 0 0" class="autocomplete col-sm-3">
                                <input asp-for="Mobile" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <label class="col-sm-2 col-form-label_custom col-form-label  offset-1">Mobile # 2 </label>
                            <div style="padding:0 0 0 0" class="autocomplete col-sm-3">
                                <input asp-for="Email_2" class="form-control" />
                                <span asp-validation-for="Email_2" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label_custom col-form-label">Email # </label>
                            <div style="padding:0 0 0 0" class="autocomplete col-sm-3">
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <label class="col-sm-2 col-form-label_custom col-form-label  offset-1">Email # 2 </label>
                            <div style="padding:0 0 0 0" class="autocomplete col-sm-3">
                                <input asp-for="Email_2" class="form-control" />
                                <span asp-validation-for="Email_2" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label_custom col-form-label">Notes</label>
                            <div style="padding:0 0 0 0" class="autocomplete col-sm-3">
                                <textarea asp-for="Notes" class="form-control"></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                            <label class="col-sm-2 col-form-label_custom col-form-label offset-1">Browse </label>
                            <div style="padding:0 0 0 0" class="autocomplete col-sm-3">
                                <input id="upload" type="file" name="files" multiple disabled />
                            </div>
                        </div>
                        <div class="form-group">
                            <input id="SaveBtn" type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
